// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Client",
      "type": "extensionHost",
      "debugWebWorkerHost": true,
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--profile-temp",
        "--extensionDevelopmentPath=${workspaceRoot}/packages/editors/vscode"
      ],
      "outFiles": [
        "${workspaceRoot}/packages/editors/vscode/client/dist/**/*.js"
      ],
      "outputCapture": "std",
      "preLaunchTask": "npm: watch"
    },
    {
      "type": "pwa-node",
      "request": "attach",
      "name": "Attach to Server",
      "port": 6009,
      "restart": true,
      "outFiles": ["${workspaceRoot}/packages/server/dist/**/*.js"],
      "outputCapture": "std"
    },
    {
      "name": "Debug ANTLR4 grammar",
      "type": "antlr-debug",
      "request": "launch",
      "input": "server/src/grammar/lib/test/test.eps",
      "grammar": "server/src/grammar/epScriptParser.g4",
      "startRule": "program",
      "printParseTree": true,
      "visualParseTree": true
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Launch Client", "Attach to Server"]
    }
  ]
}

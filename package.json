{
  "name": "eps-server",
  "description": "Language Server for epScript.",
  "author": "Zuhanit",
  "license": "MIT",
  "version": "1.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/zuhanit/epscript-language-server"
  },
  "publisher": "zuhanit",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:epscript"
  ],
  "main": "./client/dist/extension",
  "icon": "icons/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "epscript",
        "aliases": [
          "epScript"
        ],
        "extensions": [
          ".eps"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "euddraftBuild.refresh",
        "title": "Refresh",
        "icon": "resources/refresh.svg"
      },
      {
        "command": "euddraftBuild.run",
        "title": "Run",
        "icon": "resources/run.svg"
      },
      {
        "command": "euddraftBuild.edit",
        "title": "Edit",
        "icon": "resources/edit.svg"
      },
      {
        "command": "epscript.offsets",
        "title": "Offsets"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "epScript",
      "properties": {
        "epscript.welcome": {
          "type": "boolean",
          "default": "true",
          "markdownDescription": "Notify `Getting Started` when plugin enabled."
        },
        "epscript.language": {
          "type": "string",
          "default": "English",
          "enum": [
            "English",
            "한국어"
          ],
          "enumDescriptions": [
            "Set language configuration to English",
            "언어 설정을 한국어로 합니다."
          ],
          "description": "Language configuration for any messages from epScript Server, like Diagnostics."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "euddraftBuild",
          "name": "Build Manager",
          "when": "resourceLangId == epscript"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "euddraftBuild",
        "contents": "No euddraft Build files found."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "euddraftBuild.refresh",
          "when": "view == euddraftBuild",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "euddraftBuild.run",
          "when": "view == euddraftBuild",
          "group": "inline"
        },
        {
          "command": "euddraftBuild.edit",
          "when": "view == euddraftBuild",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "epscript.offsets",
          "when": "resourceLangId == epscript",
          "group": "epsc"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "build"
      }
    ],
    "grammars": [
      {
        "language": "epscript",
        "scopeName": "source.eps",
        "path": "./syntaxes/epScript.tmLanguage.json"
      }
    ],
    "keybindings": {
      "command": "epscript.offsets",
      "key": "ctrl+o"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "chrome": "npm run compile && vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ./test-data"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "mocha": "^8.3.2",
    "ts-loader": "^9.3.0",
    "typescript": "^4.5.5",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "antlr4-c3": "^2.0.2",
    "antlr4ts": "^0.5.0-alpha.4",
    "glob": "^8.0.3",
    "npm-install-missing": "^0.1.4",
    "tsc": "^2.0.4",
    "vsce": "^2.9.1",
    "vscode-uri": "^3.0.3"
  }
}
